<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaixoMinhoLeague" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenPrimary</item>
        <item name="colorPrimaryVariant">@color/greenPrimary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greenPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryOverlay</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.BaixoMinhoLeagueSinActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorSurface">@color/fondo</item>
        <item name="colorSurfaceVariant">@color/fondo</item>
        <item name="customColorValue">@color/DarkSecondari</item>
        <item name="colorPrimary">@color/greenPrimary</item>
        <item name="colorPrimaryVariant">@color/greenPrimary</item>
        <item name="colorOnPrimary">@color/fondo</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greenPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryOverlay</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorTertiary">@color/fondo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="fuentePrincipal">
        <item name="fontFamily">@font/hurmegeometricsans4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="textRecyclerView">
        <item name="android:fontFamily">@font/hurmegeometricsans4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TvSeparador">
        <item name="android:fontFamily">@font/hurmebold</item>
        <item name="android:background">@color/colorPrimaryOverlay</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">2.5dp</item>
        <item name="android:paddingBottom">2.5dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="MyTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hurmegeometricsans4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="TextViewError">
        <item name="android:textColor">@color/greenSecondary</item>
        <item name="android:paddingTop">5dp</item>
        <item name="fontFamily">@font/hurmegeometricsans4</item>
        <item name="android:textSize">14.5dp</item>
    </style>

    <style name="TextViewIconError">
        <item name="android:textColor">@color/greenSecondary</item>
        <item name="android:text">*</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="fontFamily">@font/hurmegeometricsans4</item>
    </style>
    <style name="EditTextWhiteBackground">
        <item name="android:background">@color/DarkSecondari</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fontFamily">@font/hurmegeometricsans4</item>
        <item name="android:textSize">16.5dp</item>
    </style>
    <style name="tvCorreo">
        <item name="android:background">@color/DarkSecondari</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/hurmegeometricsans4</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="textoStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/hurmegeometricsans4</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="textoStyleBold">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/hurmebold</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="textoStyleBoldGreen">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/greenPrimary</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/hurmebold</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="fondoEventos">
        <item name="android:background">@color/black</item>
    </style>
    <style name="fondoParticipantes">
        <item name="android:background">@color/black</item>
    </style>
    <style name="fondoView">
        <item name="android:background">@color/black</item>
    </style>
    <style name="textButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>